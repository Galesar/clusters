{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "src",
    "paths": {
      "@src/*": ["./src/*"],
      "@users/*": ["./src/users/*"],
      "@db/*": ["./src/db/*"],
      "@configs/*": ["./src/configs/*"],
      "@crons/*": ["./src/crons/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}